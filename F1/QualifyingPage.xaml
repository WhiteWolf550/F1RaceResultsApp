<Page x:Class="F1.QualifyingPage"
       xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:F1"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="QualifyingPage" Height="588.342" Width="811.93" Background="White">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Button Name="Race" Click="Race_Click" Content="Latest Race Results" Margin="10,10,594,546"></Button>
            <StackPanel>
                <StackPanel Panel.ZIndex="2" Orientation="Vertical" VerticalAlignment="Top" HorizontalAlignment="Center" Margin="5" Width="779" Height="107">
                    <Label Content="Qualifying Results" HorizontalAlignment="Center" FontSize="40" VerticalAlignment="Top"></Label>
                    <Label Name="ResultType" Content="Test" MinHeight="50" HorizontalContentAlignment="Center" FontSize="22" HorizontalAlignment="Center" VerticalAlignment="Top" MinWidth="100"></Label>
                </StackPanel>
                <materialDesign:Card Padding="5" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                    <StackPanel Name="ResultPanel" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Bottom" MinWidth="100" MinHeight="100">
                        <StackPanel Orientation="Horizontal">
                            <Label Width="10"></Label>
                            <Label HorizontalContentAlignment="Center" Content="Position" Width="100"></Label>
                            <Label HorizontalContentAlignment="Center" Content="Driver Number" Width="100"></Label>
                            <Label HorizontalContentAlignment="Center" Content="Driver Name" Width="100"></Label>
                            <Label HorizontalContentAlignment="Center" Content="Q1" Width="100"></Label>
                            <Label HorizontalContentAlignment="Center" Content="Q2" Width="100"></Label>
                            <Label HorizontalContentAlignment="Center" Content="Q3" Width="100"></Label>
                        </StackPanel>
                    </StackPanel>
                </materialDesign:Card>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
